<%= turbo_stream_from @room %>

<div class='d-flex flex-column h-100'>
  <div class='d-flex align-items-center mb-3 bg-purple'>
    <h1 class='flex-grow-1 m-0 py-2 text-center text-white-50'>#<%= @room.name %></h1>
    <%= link_to 'Logout', logout_path, method: :delete, class: 'link-warning p-3' %>
  </div>
  
  <div class='flex-grow-1 d-flex flex-column overflow-auto message-list' id='messages' data-controller='message-list' data-action='resize@window->message-list#scrollToBottom'>
    <%= render @messages %>
  </div>

  <%= form_with model: [@room, Message.new], class: 'p-3' do |f| %>
    <%= f.text_field :content, class: 'form-control', required: true, autocomplete: 'off', autofocus: true, placeholder: "Message ##{@room.name}" %>
  <% end %>
</div>
